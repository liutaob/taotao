package com.taotao.portal.controller;

import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;

import com.taotao.common.utils.JsonUtils;
import com.taotao.content.service.ContentService;
import com.taotao.pojo.TbContent;
import com.taotao.portal.pojo.AD1Node;
import com.taotao.portal.pojo.MiddleADNode;

/**
 * 首页展示Controller
 * 
 * @author liut
 * @date 下午5:25:27
 */
@Controller
public class IndexController {

	@Autowired
	private ContentService contentService;

	// 首页轮播图大广告
	@Value("${AD1_CATEGORY_ID}")
	private Long AD1_CATEGORY_ID;
	@Value("${AD1_HEIGHT}")
	private Integer AD1_HEIGHT;
	@Value("${AD1_WIDTH}")
	private Integer AD1_WIDTH;
	@Value("${AD1_HEIGHT_B}")
	private Integer AD1_HEIGHT_B;
	@Value("${AD1_WIDTH_B}")
	private Integer AD1_WIDTH_B;
	// 右上方小广告
	@Value("${AD2_CATEGORY_ID}")
	private Long AD2_CATEGORY_ID;
	@Value("${AD2_HEIGHT}")
	private Integer AD2_HEIGHT;
	@Value("${AD2_WIDTH}")
	private Integer AD2_WIDTH;
	@Value("${AD2_HEIGHT_B}")
	private Integer AD2_HEIGHT_B;
	@Value("${AD2_WIDTH_B}")
	private Integer AD2_WIDTH_B;
	// 轮播图下中广告
	@Value("${AD3_CATEGORY_ID}")
	private Long AD3_CATEGORY_ID;

	@RequestMapping("/index")
	public String showIndex(Model model) {
		// 取轮播图的内容信息
		List<AD1Node> slideADList = getSlideADList();
		// 取右上方广告的内容信息
		List<AD1Node> rightTopList = getRightTopADList();
		// 取轮播图下的内容信息
		List<MiddleADNode> mScrollList = getScrollADList();
		// 获取首页所有的商品类目
//		List<TbItemCat> allItemCatList = contentService.getAllItemCatList();
		// 把数据传递给页面
		model.addAttribute("slideADList", JsonUtils.objectToJson(slideADList));
		model.addAttribute("rightTopList", JsonUtils.objectToJson(rightTopList));
		model.addAttribute("mScrollList", JsonUtils.objectToJson(mScrollList));
//		model.addAttribute("allItemCatList", JsonUtils.objectToJson(allItemCatList));
		return "index";
	}
	
	
	/**
	 * 获取首页轮播图大广告列表
	 * 
	 * @autor liut
	 * @date 2019年2月18日上午11:53:15
	 * @params
	 * @return List<AD1Node>
	 */
	private List<AD1Node> getSlideADList() {
		// 取轮播图的内容信息
		List<TbContent> contentList = contentService.getContenListByCid(AD1_CATEGORY_ID);
		// 轮播图大广告转换成Ad1NodeList
		List<AD1Node> slideADList = new ArrayList<>();
		for (TbContent tbContent : contentList) {
			AD1Node node = new AD1Node();
			node.setAlt(tbContent.getTitle());
			node.setHeight(AD1_HEIGHT);
			node.setHeightB(AD1_HEIGHT_B);
			node.setWidth(AD1_WIDTH);
			node.setWidthB(AD1_WIDTH_B);
			node.setHref(tbContent.getUrl());
			node.setSrc(tbContent.getPic());
			node.setSrcB(tbContent.getPic2());
			// 添加到列表
			slideADList.add(node);
		}
		return slideADList;
	}

	/**
	 * 获取右上角小广告列表
	 * 
	 * @autor liut
	 * @date 2019年2月18日上午11:56:10
	 * @params
	 * @return List<AD1Node>
	 */
	private List<AD1Node> getRightTopADList() {
		// 取右上角广告内容列表
		List<TbContent> contentList = contentService.getContenListByCid(AD2_CATEGORY_ID);
		// 轮播图大广告转换成Ad1NodeList
		List<AD1Node> rightTopADList = new ArrayList<>();
		for (TbContent tbContent : contentList) {
			AD1Node node = new AD1Node();
			node.setAlt(tbContent.getTitle());
			node.setHeight(AD2_HEIGHT);
			node.setHeightB(AD2_HEIGHT_B);
			node.setWidth(AD2_WIDTH);
			node.setWidthB(AD2_WIDTH_B);
			node.setHref(tbContent.getUrl());
			node.setSrc(tbContent.getPic());
			node.setSrcB(tbContent.getPic2());
			// 添加到列表
			rightTopADList.add(node);
		}
		return rightTopADList;
	}

	/**
	 * 获取轮播图下中广告列表
	 * 
	 * @autor liut
	 * @date 2019年2月18日上午11:57:04
	 * @params
	 * @return List<MiddleADNode>
	 */
	private List<MiddleADNode> getScrollADList() {
		// 取轮播图下的内容信息
		List<TbContent> contentList = contentService.getContenListByCid(AD3_CATEGORY_ID);
		// 轮播图下中广告转换成MiddleADNodeList
		List<MiddleADNode> scrollADList = new ArrayList<>();
		for (int i = 0; i < contentList.size(); i++) {
			TbContent tbContent = contentList.get(i);
			MiddleADNode node = new MiddleADNode();
			node.setAlt(tbContent.getTitle());
			node.setHref(tbContent.getUrl());
			node.setSrc(tbContent.getPic());
			node.setExt("");
			node.setIndex(i);
			// 添加到列表
			scrollADList.add(node);
		}
		return scrollADList;
	}
}
